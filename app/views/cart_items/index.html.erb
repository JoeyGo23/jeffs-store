<ul>
  <% @cart_items.each do |cart_item| %>
    <li><%= link_to 'Remove', cart_item, method: :delete %> <%= cart_item.product.name %> x <%= cart_item.qty %></li>
  <% end %>
</ul>

<p>Subtotal: <%= number_to_currency @subtotal %></p>
<p>Tax: <%= number_to_currency @tax %></p>
<p>Shipping: <%= number_to_currency @shipping %></p>
<p>Total: <%= number_to_currency @total %></p>

<p><%= link_to 'Clear Cart', clear_cart_items_path %></p>